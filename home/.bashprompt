#!/usr/bin/env bash

PS1=""
function genPS1() {
	local DIR="$(pwd)"
	PS1="\e[0m┌ \e[35m"
	if git status 2>/dev/null 1>/dev/null
	then
		local GIT_PATH_BEFORE="$(cd "$(git rev-parse --show-cdup)" && dirname "$(pwd)")"
		local GIT_PATH="${DIR#$GIT_PATH_BEFORE}"
		local STATUS="$(git status --porcelain)"

		PS1+="$GIT_PATH_BEFORE\e[32m$GIT_PATH\n\e[0m│"
		PS1+=" \e[34m$(git remote get-url origin)"
		PS1+=" \e[32m[$(git branch --show-current)"

		if [ -n "$STATUS" ]
		then
			PS1+=" \e[33mdirty"
		fi
		PS1+="\e[32m]"
	else
		PS1+="$DIR"
	fi
	PS1+="\e[0m\n└ "
}

genPS1
